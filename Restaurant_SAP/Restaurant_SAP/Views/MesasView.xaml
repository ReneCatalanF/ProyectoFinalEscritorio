<UserControl x:Class="Restaurant_SAP.Views.MesasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Restaurant_SAP.Views"
             xmlns:viewmodels="clr-namespace:Restaurant_SAP.ViewModels"
             xmlns:converters="clr-namespace:Restaurant_SAP.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <viewmodels:MesasViewModel></viewmodels:MesasViewModel>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}">
            <TextBlock Text="Agregar Mesa" FontWeight="Bold" />
            <TextBox Text="{Binding NuevaMesa.Numero, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Text="{Binding NuevaMesa.Descripcion, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Agregar" Command="{Binding AgregarMesaCommand}" IsEnabled="{Binding Not IsEditing}" />
            <TextBlock Text="{Binding MensajeError}" Foreground="Red"/>
        </StackPanel>

        <ListBox Grid.Row="1" ItemsSource="{Binding Mesas}" SelectedItem="{Binding SelectedMesa}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Numero}" Margin="0,0,5,0" />
                        <TextBlock Text="{Binding Descripcion}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <GroupBox Grid.Row="2" Header="Editando Mesa" HorizontalAlignment="Right" Visibility="{Binding IsEditing}">
            <StackPanel>
                <Button Visibility="Hidden" IsTabStop="False" Name="FocusStealer" />
                <TextBox Text="{Binding SelectedMesa.Numero, UpdateSourceTrigger=LostFocus}" />
                <TextBox Text="{Binding SelectedMesa.Descripcion, UpdateSourceTrigger=LostFocus}" />
                <Button Content="Guardar Edicion" Command="{Binding GuardarCambiosCommand}" />
                <Button Content="Cancelar Edicion" Command="{Binding CancelarEdicionCommand}" />
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}">
            <Button Content="Eliminar" Command="{Binding EliminarMesaCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>